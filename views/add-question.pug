extends layout

block content
  .card
    h1.form-title Add a Question
    if error
      p.error= error
    form(method='post', action='add-question')
      input(type='number', name='level', placeholder='Level', required)
      textarea(placeholder='Question', name='question' required)
      input(type='text', placeholder='Answer', name='answer', id="answer", onkeypress="this.value = this.value.toLowerCase();" required)
      input(type='submit', value='Add Question')

  script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
  script(type="text/javascript", src='/js/script.js')
    
