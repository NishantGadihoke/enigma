extends layout

block content
  h1.title Enigma 2017
  .card.question-card
    if error
      p.error= error
    if isOver
      img(src='https://i.imgflip.com/1swb24.jpg', alt='Tum jeet gayye!', class='end')
    else
      p
        span.userLevel Level #{currentUser.level}:
        span.question #{question}
      form(method='post', action='play')
        input(type='text', placeholder='Press enter to submit', name='answer', maxlength='30', id="answer", onkeypress="this.value = this.value.toLowerCase();", required)
  p.credits Designed &amp; developed by 
    a(href='https://minet.co') MINET
    
  script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
  script(type="text/javascript", src='/js/script.js')
